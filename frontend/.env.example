# Trade2026 Frontend Configuration Example
# Copy this to .env and configure for your environment

# API Mode: 'mock' or 'real'
VITE_API_MODE=mock

# API Configuration
VITE_API_URL=http://localhost
VITE_API_TIMEOUT=30000

# Backend Service Endpoints
VITE_OMS_URL=http://localhost:8099
VITE_RISK_URL=http://localhost:8103
VITE_GATEWAY_URL=http://localhost:8080
VITE_LIVE_GATEWAY_URL=http://localhost:8200
VITE_PTRC_URL=http://localhost:8109
VITE_PNL_URL=http://localhost:8107
VITE_NORMALIZER_URL=http://localhost:8110
VITE_AUTH_URL=http://localhost:8114

# WebSocket Endpoints
VITE_WS_GATEWAY_URL=ws://localhost:8080/ws
VITE_WS_LIVE_URL=ws://localhost:8200/ws

# Application Settings
VITE_APP_NAME=Trade2026
VITE_ENV=development
VITE_LOG_LEVEL=info

# Feature Flags
VITE_ENABLE_PAPER_TRADING=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_BACKTESTING=true
VITE_ENABLE_LIVE_TRADING=false
