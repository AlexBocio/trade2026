# Simple single-stage build for faster testing
FROM python:3.11-slim

WORKDIR /app

# Install only essential packages for testing
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn==0.24.0 \
    pyyaml==6.0.1 \
    requests==2.31.0 \
    redis==5.0.1

# Copy application files
COPY main_simple.py main.py
COPY config.yaml .

# Run as non-root
USER nobody

EXPOSE 8080

CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]